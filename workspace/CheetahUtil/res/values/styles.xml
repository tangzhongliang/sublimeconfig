<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="style_textview_back">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginTop">478dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/bt_back</item>
        <item name="android:textColor">@color/centerColor</item>
        <item name="android:textSize">20px</item>
    </style>

    <style name="style_button_back">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">378dp</item>
        <item name="android:background">@drawable/bt_page_04_n</item>
    </style>

    <style name="style_textview_next">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_marginLeft">937dp</item>
        <item name="android:layout_marginTop">478dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/bt_next</item>
        <item name="android:textColor">@color/centerColor</item>
        <item name="android:textSize">20px</item>
    </style>

    <style name="style_button_next">
        <item name="android:layout_marginLeft">937dp</item>
        <item name="android:layout_marginTop">378dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/bt_page_03_n</item>
    </style>

    <!-- 飾り文字 shadow01(黒(薄)枠付きテキスト)の定義 -->
    <style name="shadow01">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 飾り文字 shadow02(凹みテキスト1)の定義 -->
    <style name="shadow02">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- 飾り文字 shadow04(白枠付テキスト)の定義 -->
    <style name="shadow04">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- dialog style -->
    <style name="base_dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>