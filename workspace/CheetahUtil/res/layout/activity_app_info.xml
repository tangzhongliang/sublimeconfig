<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/view_app_setting_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#cccccc">

    <!-- タイトル、タブ -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59px"
        android:layout_marginTop="0px"
        android:background="@color/header_background_color1">

        <RelativeLayout
            android:id="@+id/btn_back"
            android:layout_width="200px"
            android:layout_height="60px" >

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="76px"
                android:layout_height="43px"
                android:layout_marginLeft="9px"
                android:layout_marginTop="7px"
                android:background="@drawable/selector_bt_com_01" />

            <!-- icon_pict_arrowleft -->
            <ImageView
                android:layout_width="37px"
                android:layout_height="37px"
                android:layout_marginLeft="28px"
                android:layout_marginTop="8px"
                android:background="@drawable/icon_act_arrowleft_01_n"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="99px"
            android:layout_marginTop="14px"
            android:fontFamily="HGSMarugothicM"
            android:textColor="#000000"
            android:textSize="24px"
            android:text="@string/txid_ppp_b_app_information"/>

    </RelativeLayout>

    <!-- 設定項目 -->

    <LinearLayout
        android:layout_marginTop="68px"
        android:layout_centerHorizontal="true"
        android:layout_width="864px"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- アプリバージョン表示-->


        <LinearLayout
            android:layout_width="864px"
            android:layout_height="63px"
            android:layout_marginTop="16px"
            android:orientation="horizontal">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="17dp"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:text=""
                android:textColor="#000000"
                android:textSize="24px" />
           
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="17dp"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/txid_ppp_g_app_information_ver_label"
                android:textColor="#000000"
                android:textSize="24px" />

            <TextView
                android:id="@+id/btn_app_version_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="17dp"
                android:gravity="left"
                android:singleLine="true"
                android:text="00.02.01"
                android:textColor="#000000"
                android:textSize="24px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_show_oss_license"
            android:layout_width="864px"
            android:layout_height="63px"
            android:orientation="horizontal"
            android:background="@drawable/selector_bt_com_01">

            <TextView
                android:layout_width="650dp"
                android:layout_height="28dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="17dp"
                android:singleLine="true"
                android:gravity="left"
                android:text="@string/txid_ppp_b_app_information_show_oss"
                android:textColor="#000000"
                android:textSize="24px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="173dp"
                android:layout_marginTop="19dp"
                android:src="@drawable/icon_act_slide_01" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
