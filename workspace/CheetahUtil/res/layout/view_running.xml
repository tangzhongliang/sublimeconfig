<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_running"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/com_back_black01" >

    <ImageView
        android:layout_width="960dp"
        android:layout_height="497dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/sim_back_running" />

    <TextView
        android:id="@+id/txt_running_send"
        android:layout_width="452dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="44dp"
        android:text="@string/txid_scan_g_running_scan"
        android:textColor="#000000"
        android:textSize="28px"
        android:shadowColor="#50ffffff"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="2"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="209dp"
        android:layout_marginLeft="431dp"
        android:layout_marginTop="254dp"
        android:src="@drawable/sim_icon_runningbox_still_sendmfp" />

    <ImageView
        android:layout_width="178dp"
        android:layout_height="82dp"
