        android:textColor="#FFFFFF"
        android:textSize="40px" />

    <ImageView
        android:id="@+id/vr_total"
        android:layout_width="162dp"
        android:layout_height="93dp"
        android:layout_marginLeft="226dp"
        android:layout_marginTop="341dp"
        android:background="@drawable/sim_icon_runninballoon_scan" />

    <TextView
        android:id="@+id/txt_total_of_address"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="234dp"
        android:layout_marginTop="352dp"
        android:gravity="center"
        android:text="@string/txid_scan_g_running_dest_num"
        android:textColor="#FFFFFF"
        android:textSize="18px" />

    <TextView
        android:id="@+id/text_total_dest_num"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="386dp"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:textSize="40px" />

    <TextView
        android:id="@+id/txt_runnning_send_memory"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="444dp"
        android:layout_marginTop="302dp"
        android:gravity="center_horizontal"
        android:text="@string/txid_scan_g_running_remain_memory"
        android:textColor="#000000"
        android:textSize="20px"
        android:shadowColor="#50ffffff"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="2"/>

    <TextView
        android:id="@+id/text_rest_memory_num"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="460dp"
        android:layout_marginTop="336dp"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="40px"
        android:shadowColor="#50ffffff"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="2" />

    <FrameLayout
        android:id="@+id/container_anime"
        android:layout_width="496dp"
        android:layout_height="377dp"
        android:layout_marginLeft="431dp"
        android:layout_marginTop="86dp" >       
        </FrameLayout>
         <Button
             android:id="@+id/vr_bt_stop"
            android:layout_width="256dp"
            android:layout_height="56dp"
            android:background="@drawable/selector_bt_stop_01"
            android:text="@string/button_stop"
            android:textSize="@dimen/font_28"
            android:layout_marginLeft="705dp"
            android:layout_marginTop="425dp" /> 

</RelativeLayout>
