<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1024dp"
    android:layout_height="match_parent"
    android:background="#cccccc"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/view_head_ok_cancel" />
    <!-- 種別切替 -->

    <FrameLayout
        android:id="@+id/select_service"
        android:layout_width="396dp"
        android:layout_height="56dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_bt_com_01"
        android:clickable="true" >

        <ImageView
            android:id="@+id/icon_service"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="0dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_service_mail_02" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="370dp"
            android:layout_marginTop="34dp"
            android:src="@drawable/icon_pict_pulldown" />

        <TextView
            android:id="@+id/app_title_text"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="HGSMarugothicM"
            android:gravity="left|center_vertical"
            android:text="@string/txid_scan_b_dest_select_mail"
            android:textColor="#000000"
            android:textSize="24px" >
        </TextView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/email_input"
        android:layout_width="732dp"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="@drawable/selector_bt_com_01"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:gravity="left"
            android:text="@string/sender_email"
            android:textColor="#000000"
            android:textSize="24px" />

        <View
            android:layout_width="2dp"
            android:layout_height="35dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="13dp"
            android:alpha="0.15"
            android:background="#000000" />

        <EditText
            android:id="@+id/et_email_input"
            android:layout_width="430dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="17dp"
            android:background="@null"
            android:gravity="left"
            android:hint="@string/hint_init_setting_input"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="24px" />

        <ImageView
            android:layout_width="19dp"
            android:layout_height="6dp"
            android:layout_marginLeft="840dp"
            android:layout_marginTop="52dp"
            android:src="@drawable/icon_act_pop_01" />
    </FrameLayout>
    <!-- search send -->

    <LinearLayout
        android:id="@+id/flipper"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <ViewFlipper
            android:id="@+id/flipper_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <include
                android:id="@+id/tag_group_1"
                layout="@layout/view_address_caption10" />

            <include
                android:id="@+id/tag_group_2"
                layout="@layout/view_address_caption10" />

            <include
                android:id="@+id/tag_group_3"
                layout="@layout/view_address_caption5" />
        </ViewFlipper>

        <FrameLayout
            android:layout_width="62dp"
            android:layout_height="48dp"
            android:background="@drawable/selector_bt_tab_04" >

            <ImageView
                android:id="@+id/btn_switch_caption"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/icon_pict_toggle" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:visibility="gone" >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <GridView
        android:id="@+id/gridview_address_entry"
        android:layout_width="732dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:cacheColorHint="#00000000"
        android:columnWidth="366dp"
        android:listSelector="@drawable/bt_com_01_w"
        android:numColumns="2"
        android:scrollbars="none"
        android:requiresFadingEdge="vertical"
        android:stretchMode="none"
     
       >
    </GridView>

</LinearLayout>