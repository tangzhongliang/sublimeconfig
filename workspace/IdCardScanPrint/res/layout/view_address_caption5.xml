<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <Button
            android:id="@+id/btn_common"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/selector_bt_tab_02"
            android:textColor="@color/black"
            android:textSize="24px" 
           />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/btn_common"
            android:background="@drawable/selector_bt_tab_03"
            android:textColor="@color/black"
            android:textSize="24px" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/btn_1"
            android:background="@drawable/selector_bt_tab_03"
            android:textColor="@color/black"
            android:textSize="24px" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/btn_2"
            android:background="@drawable/selector_bt_tab_03"
            android:textColor="@color/black"
            android:textSize="24px" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/btn_3"
            android:background="@drawable/selector_bt_tab_03"
            android:textColor="@color/black"
            android:textSize="24px" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/btn_4"
            android:background="@drawable/selector_bt_tab_03"
            android:textColor="@color/black"
            android:textSize="24px" />
 
</RelativeLayout>