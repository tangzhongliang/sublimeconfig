<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="864dp"
    android:layout_height="63dp"
    android:gravity="center_vertical"
    android:background="@drawable/selector_bt_com_01"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/sender_title"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:gravity="left|center_vertical"
        android:text="@string/tx_init_setting_messenger"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="24px" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="35dp"
        android:layout_marginLeft="9dp"
        android:background="@color/black_transparency45" />

    <ImageView
        android:id="@+id/sender_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginLeft="9dp"
        android:padding="2dp"
        android:visibility="gone"
        android:src="@drawable/icon_service_mail_02"/>

    <TextView
        android:id="@+id/sender_title_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:gravity="left|center_vertical"
        android:text="@string/fragment_sender_item_value_null"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="24px" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="52dp"
        android:src="@drawable/icon_act_slide_01" />

</LinearLayout>