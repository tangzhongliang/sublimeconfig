<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <!-- フォルダーボタン -->

  -   

    <RelativeLayout
        android:id="@+id/btn_mail"
        android:layout_width="426dp"
        android:layout_height="70dp"
        android:background="@drawable/selector_popwindow_bg_01"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_mail"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="33dp"
            android:fontFamily="HGSMarugothicM"
            android:gravity="left"
            android:text="@string/txid_scan_b_dest_select_mail"
            android:textColor="#000000"
            android:textSize="20px" />

        <ImageView
            android:id="@+id/icon_mail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="23dp"
            android:src="@drawable/icon_service_mail" />
    </RelativeLayout>

    <!-- メールボタン -->

    <RelativeLayout
        android:id="@+id/btn_mail_add"
        android:layout_width="426dp"
        android:layout_height="54dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/selector_popwindow_bg_02"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_mail_add"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="75dp"
            android:fontFamily="HGSMarugothicM"
            android:gravity="left"
            android:text="@string/txid_scan_b_dest_select_mail_add"
            android:textColor="#000000"
            android:textSize="20px" />

        <ImageView
            android:id="@+id/icon_mail_add"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            android:src="@drawable/icon_service_mail" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_mail_add_sender"
        android:layout_width="426dp"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/selector_popwindow_bg_03"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_mail_add_sender"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="15dp"
            android:fontFamily="HGSMarugothicM"
            android:gravity="left"
            android:text="@string/txid_scan_b_dest_select_mail_add"
            android:textColor="#000000"
            android:textSize="20px" />

        <ImageView
            android:id="@+id/icon_mail_add_sender"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/icon_service_mail" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_folder"
        android:layout_width="426dp"
        android:layout_height="54dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/selector_popwindow_bg_02" >

        <TextView
            android:id="@+id/tv_folder"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="75dp"
            android:fontFamily="HGSMarugothicM"
            android:gravity="left"
            android:text="@string/txid_scan_b_dest_select_folder"
            android:textColor="#000000"
            android:textSize="20px" />

        <ImageView
            android:id="@+id/icon_folder"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="23dp"
            android:src="@drawable/icon_service_folder" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_folder_add"
        android:layout_width="426dp"
        android:layout_height="70dp"
        android:layout_marginTop="178dp"
        android:background="@drawable/selector_popwindow_bg_03" >

        <TextView
            android:id="@+id/tv_folder_add"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="15dp"
            android:fontFamily="HGSMarugothicM"
            android:gravity="left"
            android:text="@string/txid_scan_b_dest_select_folder_add"
            android:textColor="#000000"
            android:textSize="20px" />

        <ImageView
            android:id="@+id/icon_folder_add"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/icon_service_folder" />
    </RelativeLayout>

</RelativeLayout>