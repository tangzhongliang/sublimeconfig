<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_cccccc"
    android:orientation="vertical" >

    <jp.co.ricoh.advop.idcardscanprint.ui.view.HeaderOkCancel
        android:id="@+id/reveiver_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </jp.co.ricoh.advop.idcardscanprint.ui.view.HeaderOkCancel>
  
    <RelativeLayout
        android:id="@+id/init_setting_receiver_reset_btn"
        android:layout_width="172dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="844dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/selector_bt_com_12" >

        <ImageView
            android:id="@+id/fst_iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/icon_pict_reset" />

        <TextView
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="49dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/btn_init_setting_section_scan_reset"
            android:textColor="@color/black"
            android:textSize="@dimen/font_20" />
         <ImageView
            android:id="@+id/img_section_line2"
            android:layout_width="1dp"
            android:layout_marginLeft="170dp"
            android:layout_height="36dp"
            android:background="#b2b2b2" />

    </RelativeLayout>
            
    <GridView
        android:id="@+id/list_receiver_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="28dp"
        android:cacheColorHint="#00000000"
        android:columnWidth="864dp"
        android:drawSelectorOnTop="false"
        android:horizontalSpacing="0dp"
        android:listSelector="@color/transparent"
        android:requiresFadingEdge="vertical"
        android:numColumns="1"
        android:scrollbars="none"
        android:stretchMode="none"
        android:verticalSpacing="9dp" >
    </GridView>

</LinearLayout>