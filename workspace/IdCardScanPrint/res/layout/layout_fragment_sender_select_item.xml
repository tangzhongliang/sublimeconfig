<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="381dp"
    android:layout_height="80dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon_act_check_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/transparent"
            android:src="@drawable/selector_icon_title_check02" />

        <ImageView
            android:id="@+id/icon_service_sender"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:padding="2dp"
            android:src="@drawable/icon_service_mail" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/sender_title_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:lines="1"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="24px"
                android:text="@string/fragment_sender_item_value_null" />

            <TextView
                android:id="@+id/sender_title_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:lines="1"
                android:text="@string/fragment_sender_item_value_null"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="20px" />
        </LinearLayout>

        <Button
            android:id="@+id/sender_alter"
            android:layout_width="94dp"
            android:layout_height="43dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:background="@drawable/selector_bt_com_02"
            android:gravity="center"
            android:textSize="20px"
            android:text="@string/fragment_sender_change"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/icon_act_pop"
        android:layout_width="19dp"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="7dp"
        android:src="@drawable/icon_pict_popup02" />

</RelativeLayout>